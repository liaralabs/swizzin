#!/bin/bash
# retrieves the php version from nginx config and restarts it

function restart_php_fpm () {
nginxconfpath='/etc/nginx/sites-enabled/default'
version=$(cat $nginxconfpath | grep -o -P '(?<=/php/).*(?=.sock)')
serv="php${version}-fpm.service"
#serv=(ls /etc/systemd/system | grep php7 | tail -1)
systemctl restart $serv
    if [[ $(systemctl is-active $serv) == "active" ]]; then
      systemctl stop $serv
      systemctl disable $serv
    fi
}
